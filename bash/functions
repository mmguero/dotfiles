function pipup() {
  pip2 list --outdated --format=freeze | grep -v '^\-e' | cut -d = -f 1  | xargs -r -n1 pip2 install -U
  pip3 list --outdated --format=freeze | grep -v '^\-e' | cut -d = -f 1  | xargs -r -n1 pip3 install -U
}

